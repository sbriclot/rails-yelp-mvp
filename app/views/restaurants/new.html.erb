<h1>New restaurant</h1>

<%= simple_form_for (@restaurant) do  |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: @categories %>
  <%= f.submit "Add restaurant", class: "btn btn-primary" %>
  <%= link_to "Cancel", root_path, class: "btn btn-danger" %>
<% end %>
